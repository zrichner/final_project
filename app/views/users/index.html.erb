<div class="page-header">
  <h1>
    Users
    <a href="/users/new" class="btn btn-lg btn-success">New User</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>City</th>
        <th>Rolefunction</th>
        <th>Industry</th>
        <th>Stateorcountry</th>
        <th>Region</th>
        <th>Actions</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td>
          <% if user.city.present? %>
            <a href="/cities/<%= user.city.id %>">
              <%= user.city.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if user.rolefunction.present? %>
            <a href="/rolefunctions/<%= user.rolefunction.id %>">
              <%= user.rolefunction.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if user.industry.present? %>
            <a href="/industries/<%= user.industry.id %>">
              <%= user.industry.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if user.stateorcountry.present? %>
            <a href="/stateorcountries/<%= user.stateorcountry.id %>">
              <%= user.stateorcountry.name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if user.region.present? %>
            <a href="/regions/<%= user.region.id %>">
              <%= user.region.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/users/<%= user.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
