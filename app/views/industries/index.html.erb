<div class="page-header">
  <h1>
    Industries
    <a href="/industries/new" class="btn btn-lg btn-success">New Industry</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @industries.each do |industry| %>
      <tr>
        <td><%= industry.name %></td>
        <td>
          <a href="/industries/<%= industry.id %>" class="btn btn-primary">Show</a>
          <a href="/industries/<%= industry.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_industry/<%= industry.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @industries, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
