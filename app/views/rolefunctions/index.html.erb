<div class="page-header">
  <h1>
    Rolefunctions
    <a href="/rolefunctions/new" class="btn btn-lg btn-success">New Rolefunction</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @rolefunctions.each do |rolefunction| %>
      <tr>
        <td><%= rolefunction.name %></td>
        <td>
          <a href="/rolefunctions/<%= rolefunction.id %>" class="btn btn-primary">Show</a>
          <a href="/rolefunctions/<%= rolefunction.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_rolefunction/<%= rolefunction.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @rolefunctions, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
